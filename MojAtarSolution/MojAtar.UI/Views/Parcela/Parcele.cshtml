@model List<MojAtar.Core.DTO.ParcelaDTO>

@{
    ViewData["Title"] = "Moje Parcele";
}

<div class="container mt-5">
    <div class="container-glass">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">📍 Moje Parcele</h2>
            <a asp-action="Dodaj" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Dodaj novu parcelu
            </a>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var parcela in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title">@parcela.Naziv</h5>
                            <p class="card-text mb-1">
                                <strong>Broj parcele:</strong> @parcela.BrojParcele
                            </p>
                            <p class="card-text mb-1">
                                <strong>Površina:</strong> @parcela.Povrsina ha
                            </p>
                            <p class="card-text mb-1">
                                <strong>Napomena:</strong> @parcela.Napomena
                            </p>
                            <p class="card-text mb-1">
                                <strong>Katastarska opština:</strong> @parcela.KatastarskaOpstinaNaziv
                            </p>
                            @if (parcela.AktivneKulture != null && parcela.AktivneKulture.Any())
                            {
                                <p class="card-text mb-1"><strong>Trenutno posejane kulture:</strong></p>
                                <ul class="mb-2">
                                    @foreach (var kultura in parcela.AktivneKulture)
                                    {
                                        <li>@kultura.NazivKulture – @kultura.Povrsina ha</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="card-text text-muted mb-1">Nema posejanih kultura</p>
                            }

                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <form asp-action="Izmeni" asp-route-id="@parcela.Id" method="get">
                                <button type="submit" class="btn btn-sm btn-warning w-100">
                                    <i class="bi bi-pencil-square"></i> Izmeni
                                </button>
                            </form>
                            <form asp-action="Obrisi" asp-route-id="@parcela.Id" method="post" onsubmit="return confirm('Da li ste sigurni?');" >
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    <i class="bi bi-trash3"></i> Obriši
                                </button>
                            </form>
                            <form asp-controller="Radnja" asp-action="RadnjePoParceli" asp-route-idParcela="@parcela.Id" method="get">
                                <button type="submit" class="btn btn-sm btn-info w-100">
                                    <i class="bi bi-list-ul"></i> Radnje
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            <div class="d-flex justify-content-between align-items-center mt-4 w-100">
                <!-- Strelica levo -->
                <a class="btn btn-success @(ViewBag.Skip <= 9 ? "disabled" : "")"
                   asp-action="Parcele"
                   asp-route-skip="@(ViewBag.Skip - 18)"
                   asp-route-take="9">
                    <i class="bi bi-arrow-left"></i> Prethodna
                </a>

                <span class="fw-bold text-center flex-grow-1">
                    Stranica @(Math.Ceiling((decimal)(ViewBag.Skip / 9.0))) od @(Math.Ceiling((decimal)ViewBag.TotalCount / 9))
                </span>

                <!-- Strelica desno -->
                <a class="btn btn-success @(ViewBag.Skip >= ViewBag.TotalCount ? "disabled" : "")"
                   asp-action="Parcele"
                   asp-route-skip="@(ViewBag.Skip)"
                   asp-route-take="9">
                    Sledeća <i class="bi bi-arrow-right"></i>
                </a>
            </div>

        </div>
    </div>
</div>
