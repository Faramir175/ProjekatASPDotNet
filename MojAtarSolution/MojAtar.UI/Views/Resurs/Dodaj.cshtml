@using MojAtar.Core.DTO
@model ResursDTO

@{
    ViewData["Title"] = Model.Id == null ? "Dodaj resurs" : "Izmeni resurs";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="@(Model.Id == null ? "Dodaj" : "Izmeni")" asp-controller="Resurs">
    @if (Model.Id != null)
    {
        <input type="hidden" asp-for="Id" />
    }

    <input type="hidden" name="KorisnikId" value="@ViewBag.UserId" />

    <div class="form-group">
        <label asp-for="Naziv">Naziv resursa</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Vrsta">Vrsta</label>
        <input asp-for="Vrsta" class="form-control" />
        <span asp-validation-for="Vrsta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AktuelnaCena">Aktuelna cena po jedinici</label>
        <input asp-for="AktuelnaCena" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="AktuelnaCena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Id == null ? "Dodaj resurs" : "Sačuvaj izmene")
    </button>
    <a asp-action="Resursi" class="btn btn-secondary ml-2">Nazad</a>
</form>
