@model List<MojAtar.Core.DTO.ResursDTO>

@{
    ViewData["Title"] = "Moji Resursi";
}

<div class="container mt-5">
    <div class="container-glass">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">📦 Moji Resursi</h2>
            <a asp-action="Dodaj" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Dodaj nov resurs
            </a>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var resurs in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title">@resurs.Naziv</h5>
                            <p class="card-text mb-1">
                                <strong>Vrsta:</strong> @resurs.Vrsta
                            </p>
                            <p class="card-text">
                                <strong>Aktuelna cena:</strong> @resurs.AktuelnaCena.ToString("0.00") RSD
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 d-flex flex-wrap gap-2">
                            <form asp-action="Izmeni" asp-route-id="@resurs.Id" method="get" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-warning w-100">
                                    <i class="bi bi-pencil-square"></i> Izmeni
                                </button>
                            </form>
                            <form asp-action="Obrisi" asp-route-id="@resurs.Id" method="post" onsubmit="return confirm('Da li ste sigurni?');" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    <i class="bi bi-trash3"></i> Obriši
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            <div class="d-flex justify-content-between align-items-center mt-4 w-100">
                <a class="btn btn-success @(ViewBag.Skip <= 9 ? "disabled" : "")"
                   asp-action="Resursi"
                   asp-route-skip="@(ViewBag.Skip - 18)"
                   asp-route-take="9">
                    <i class="bi bi-arrow-left"></i> Prethodna
                </a>

                <span class="fw-bold text-center flex-grow-1">
                    Stranica @(Math.Ceiling((decimal)(ViewBag.Skip / 9.0))) od @(Math.Ceiling((decimal)ViewBag.TotalCount / 9))
                </span>

                <a class="btn btn-success @(ViewBag.Skip >= ViewBag.TotalCount ? "disabled" : "")"
                   asp-action="Resursi"
                   asp-route-skip="@(ViewBag.Skip)"
                   asp-route-take="9">
                    Sledeća <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
