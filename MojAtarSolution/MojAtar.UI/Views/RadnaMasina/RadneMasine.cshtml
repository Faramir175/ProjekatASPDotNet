@model List<MojAtar.Core.DTO.RadnaMasinaDTO>

@{
    ViewData["Title"] = "Moje Radne Mašine";
}

<div class="container mt-5">
    <div class="container-glass">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">🚜 Moje Radne Mašine</h2>
            <a asp-action="Dodaj" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Dodaj novu radnu masinu
            </a>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var masina in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title">@masina.Naziv</h5>
                            <p class="card-text mb-1">
                                <strong>Tip ulja:</strong> @masina.TipUlja
                            </p>
                            <p class="card-text mb-1">
                                <strong>Radni sati za servis:</strong> @masina.RadniSatiServis
                            </p>
                            <p class="card-text mb-1">
                                <strong>Poslednji servis:</strong> @masina.PoslednjiServis.ToShortDateString()
                            </p>
                            <p class="card-text mb-1">
                                <strong>Opis servisa:</strong> @masina.OpisServisa
                            </p>
                            <p class="card-text">
                                <strong>Ukupan broj radnih sati:</strong> @masina.UkupanBrojRadnihSati
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 d-flex flex-wrap gap-2">
                            <form asp-action="Izmeni" asp-route-id="@masina.Id" method="get" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-warning w-100">
                                    <i class="bi bi-pencil-square"></i> Izmeni
                                </button>
                            </form>
                            <form asp-action="Obrisi" asp-route-id="@masina.Id" method="post" onsubmit="return confirm('Da li ste sigurni?');" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    <i class="bi bi-trash3"></i> Obriši
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
