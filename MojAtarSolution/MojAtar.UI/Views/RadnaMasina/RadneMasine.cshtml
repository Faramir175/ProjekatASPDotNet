@model List<MojAtar.Core.DTO.RadnaMasinaDTO>

@{
    ViewData["Title"] = "Moje Radne Masine";
}

<h2>Moje Radne Masine</h2>

<a asp-action="Dodaj" class="btn btn-primary mb-3">Dodaj novu radnu masinu</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Tip ulja</th>
            <th>Broj radnih sati nakon kojih se radi servis</th>
            <th>Datum poslednjeg servisa</th>
            <th>Opis servisa</th>
            <th>Ukupan broj radnih sati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var radnaMasina in Model)
        {
            <tr>
                <td>@radnaMasina.Naziv</td>
                <td>@radnaMasina.TipUlja</td>
                <td>@radnaMasina.RadniSatiServis</td>
                <td>@radnaMasina.PoslednjiServis</td>
                <td>@radnaMasina.OpisServisa</td>
                <td>@radnaMasina.UkupanBrojRadnihSati</td>
                <td>
                    <a asp-action="Izmeni" asp-route-id="@radnaMasina.Id" class="btn btn-warning">Izmeni</a>
                    <form asp-action="Obrisi" asp-route-id="@radnaMasina.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Da li ste sigurni?');">Obriši</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
