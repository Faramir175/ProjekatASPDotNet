@using MojAtar.Core.DTO
@model RadnaMasinaDTO

@{
    ViewData["Title"] = Model.Id == null ? "Dodaj radnu mašinu" : "Izmeni radnu mašinu";
}

<div class="container py-5">
    <div class="container-glass" style="max-width: 600px; margin: auto;">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <a asp-action="RadneMasine" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Nazad
            </a>
        </div>

        <form method="post" asp-action="@(Model.Id == null ? "Dodaj" : "Izmeni")" asp-controller="RadnaMasina">
            @if (Model.Id != null)
            {
                <input type="hidden" asp-for="Id" />
            }

            <input type="hidden" name="KorisnikId" value="@ViewBag.UserId" />

            <div class="mb-3">
                <label asp-for="Naziv" class="form-label">Naziv radne mašine</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipUlja" class="form-label">Tip ulja</label>
                <input asp-for="TipUlja" class="form-control" />
                <span asp-validation-for="TipUlja" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RadniSatiServis" class="form-label">Radni sati do servisa</label>
                <input asp-for="RadniSatiServis" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="RadniSatiServis" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PoslednjiServis" class="form-label">Poslednji servis</label>
                <input asp-for="PoslednjiServis" type="date" class="form-control" />
                <span asp-validation-for="PoslednjiServis" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OpisServisa" class="form-label">Opis servisa</label>
                <textarea asp-for="OpisServisa" class="form-control" rows="4" style="min-height: 120px; resize: vertical;"></textarea>
                <span asp-validation-for="OpisServisa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UkupanBrojRadnihSati" class="form-label">Ukupno radnih sati</label>
                <input asp-for="UkupanBrojRadnihSati" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="UkupanBrojRadnihSati" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    @(Model.Id == null ? "Dodaj radnu mašinu" : "Sačuvaj izmene")
                </button>
            </div>
        </form>
    </div>
</div>
