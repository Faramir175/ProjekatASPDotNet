@model MojAtar.Core.DTO.KorisnikRequestDTO

@{
    ViewData["Title"] = "Podešavanja korisničkog profila";
}

<!DOCTYPE html>
<html lang="sr">
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="container py-5">
    <div class="container-glass">

        <h2 class="text-center mb-4">Izmenite svoje podatke</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-controller="Korisnik" asp-action="Azuriraj" method="post">
            <div class="mb-3">
                <label for="Ime" class="form-label">Ime</label>
                <input type="text" class="form-control" id="Ime" name="Ime" value="@Model.Ime" required>
            </div>

            <div class="mb-3">
                <label for="Prezime" class="form-label">Prezime</label>
                <input type="text" class="form-control" id="Prezime" name="Prezime" value="@Model.Prezime" required>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
            </div>

            <div class="mb-3">
                <label for="TrenutnaLozinka" class="form-label">Trenutna lozinka</label>
                <input type="password" class="form-control" id="TrenutnaLozinka" name="TrenutnaLozinka" required>
            </div>

            <div class="mb-3">
                <label for="Lozinka" class="form-label">Nova lozinka (opciono)</label>
                <input type="password" class="form-control" id="Lozinka" name="Lozinka">
            </div>

            <input type="hidden" name="DatumRegistracije" value="@Model.DatumRegistracije?.ToString("yyyy-MM-ddTHH:mm:ss")" />
            <input type="hidden" name="KorisnikId" id="KorisnikId" value="@ViewBag.KorisnikId" />

            <button type="submit" class="submit-button action-btn" onclick="return confirm('Da li ste sigurni?');">Sačuvaj izmene</button>
        </form>

        <hr />

        <form asp-controller="Korisnik" asp-action="Obrisi" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger action-btn" onclick="return confirm('Da li ste sigurni?');">Obriši nalog</button>
        </form>
    </div>
</div>
</html>
