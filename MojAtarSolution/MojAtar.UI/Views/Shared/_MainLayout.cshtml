<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="d-flex flex-column">
        <!-- Gornja navigacija -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand ms-4" href="#">Moj Atar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto me-3">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Početna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/parcele">Parcele</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMasine" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mašine
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMasine">
                                <li><a class="dropdown-item" href="/radne-masine">Radne mašine</a></li>
                                <li><a class="dropdown-item" href="/prikljucne-masine">Priključne mašine</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/resursi">Resursi</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/kulture">Kulture</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/radnje">Radnje</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/izvestaji">Izveštaji</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownNalog" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Nalog
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownNalog">
                                <li>
                                    <a class="dropdown-item" href="/korisnici/podesavanja">
                                        <i class="bi bi-gear me-2"></i> Podesavanja naloga
                                    </a>
                                </li>
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" onsubmit="return confirm('Da li ste sigurni?');" class="dropdown-item p-0">
                                        <button type="submit" class="btn w-100 text-start dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i> Odjava
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>

            <!-- Glavni sadržaj -->
            <div class="flex-grow-1 p-4">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
