<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="app-page">
    <div class="d-flex flex-column">
        <!-- Gornja navigacija -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand ms-4" asp-controller="Pocetna" asp-action="Pocetna">Moj Atar</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto me-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pocetna" asp-action="Pocetna">Početna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Parcela" asp-action="Parcele">Parcele</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMasine" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mašine
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMasine">
                                <li><a class="dropdown-item" asp-controller="RadnaMasina" asp-action="RadneMasine">Radne mašine</a></li>
                                <li><a class="dropdown-item" asp-controller="PrikljucnaMasina" asp-action="PrikljucneMasine">Priključne mašine</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Resurs" asp-action="Resursi">Resursi</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Kultura" asp-action="Kulture">Kulture</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Radnja" asp-action="Radnje">Radnje</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Izvestaji" asp-action="Izvestaj">Izveštaji</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownIstorija" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Istorija cena
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownIstorija">
                                <li><a class="dropdown-item" asp-controller="IstorijaCena" asp-action="Resursi">Resursi</a></li>
                                <li><a class="dropdown-item" asp-controller="IstorijaCena" asp-action="Kulture">Kulture</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownNalog" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Nalog
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownNalog">
                                <li>
                                    <a class="dropdown-item" asp-controller="Korisnik" asp-action="Podesavanja">
                                        <i class="bi bi-gear me-2"></i> Podešavanja naloga
                                    </a>
                                </li>
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" onsubmit="return confirm('Da li ste sigurni?');" class="dropdown-item p-0">
                                        <button type="submit" class="btn w-100 text-start dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i> Odjava
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Glavni sadržaj -->
        <div class="flex-grow-1 p-4">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
