@using MojAtar.Core.DTO
@model PrikljucnaMasinaDTO

@{
    ViewData["Title"] = Model.Id == null ? "Dodaj prikljucnu masinu" : "Izmeni prikljucnu masinu";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="@(Model.Id == null ? "Dodaj" : "Izmeni")" asp-controller="PrikljucnaMasina">
    @if (Model.Id != null)
    {
        <input type="hidden" asp-for="Id" />
    }

    <input type="hidden" name="KorisnikId" value="@ViewBag.UserId" />

    <div class="form-group">
        <label asp-for="Naziv">Naziv prikljucne masine</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipMasine">Tip masine</label>
        <input asp-for="TipMasine" class="form-control" />
        <span asp-validation-for="TipMasine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SirinaObrade">Sirina obrade prikljucne masine</label>
        <input asp-for="SirinaObrade" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="SirinaObrade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PoslednjiServis">Datum poslednjeg servisa</label>
        <input asp-for="PoslednjiServis" type="date" class="form-control" />
        <span asp-validation-for="PoslednjiServis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OpisServisa">Opis servisa</label>
        <input asp-for="OpisServisa" class="form-control" />
        <span asp-validation-for="OpisServisa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Id == null ? "Dodaj prikljucnu masinu" : "Sačuvaj izmene")
    </button>
    <a asp-action="PrikljucneMasine" class="btn btn-secondary ml-2">Nazad</a>
</form>
