@using MojAtar.Core.DTO
@model PrikljucnaMasinaDTO

@{
    ViewData["Title"] = Model.Id == null ? "Dodaj priključnu mašinu" : "Izmeni priključnu mašinu";
}

<div class="container py-5">
    <div class="container-glass" style="max-width: 600px; margin: auto;">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <a asp-action="PrikljucneMasine" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Nazad
            </a>
        </div>

        <form method="post" asp-action="@(Model.Id == null ? "Dodaj" : "Izmeni")" asp-controller="PrikljucnaMasina">
            @if (Model.Id != null)
            {
                <input type="hidden" asp-for="Id" />
            }

            <input type="hidden" name="KorisnikId" value="@ViewBag.UserId" />

            <div class="mb-3">
                <label asp-for="Naziv" class="form-label">Naziv priključne mašine</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipMasine" class="form-label">Tip mašine</label>
                <input asp-for="TipMasine" class="form-control" />
                <span asp-validation-for="TipMasine" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SirinaObrade" class="form-label">Širina obrade (m)</label>
                <input asp-for="SirinaObrade" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="SirinaObrade" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PoslednjiServis" class="form-label">Datum poslednjeg servisa</label>
                <input asp-for="PoslednjiServis" type="date" class="form-control" />
                <span asp-validation-for="PoslednjiServis" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OpisServisa" class="form-label">Opis servisa</label>
                <input asp-for="OpisServisa" class="form-control" />
                <span asp-validation-for="OpisServisa" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    @(Model.Id == null ? "Dodaj priključnu mašinu" : "Sačuvaj izmene")
                </button>
            </div>
        </form>
    </div>
</div>
